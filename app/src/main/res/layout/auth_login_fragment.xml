<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="150dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo"
            android:layout_height="150dp" />

        <neverest.ke.co.digiland.widget.FontTextView
            android:layout_width="match_parent"
            app:font_face="@string/bold_font"
            android:text="Login"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:id="@+id/pr"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />

        <neverest.ke.co.digiland.widget.FontTextView
            android:layout_width="match_parent"
            app:font_face="@string/regular_font"
            android:text="log into the network with your unique identifier"
            android:gravity="center"
            android:textColor="@color/primary_text"
            android:layout_marginTop="@dimen/ten"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="240dp"
            android:hint="email address"
            android:gravity="center"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:padding="@dimen/ten"
            android:background="@drawable/round_edittext_states"
            android:id="@+id/email_address"
            android:layout_height="wrap_content" />

        <neverest.ke.co.digiland.widget.FontTextView
            android:layout_width="match_parent"
            app:font_face="@string/regular_font"
            android:text="You must have a valid membership"
            android:textSize="11sp"
            android:textColor="@color/primary_text"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:text="Login"
            android:padding="@dimen/ten"
            android:id="@+id/login_btn"
            android:backgroundTint="@color/colorAccent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/ten"
            style="@style/AppTheme.RoundedCornerMaterialButton"
            android:layout_height="wrap_content" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>